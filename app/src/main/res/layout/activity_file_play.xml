<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.nuvoton.nuplayer.FilePlayActivity">

    <com.appunite.ffmpeg.FFmpegSurfaceView
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:id="@+id/fileVideoView"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#114236"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#036D6E"
        android:layout_alignBottom="@+id/fileVideoView"
        android:layout_alignParentStart="true">

        <SeekBar
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/fileSeekBar"
            android:thumbTint="#FFFFFF"
            android:progressTint="#FFFFFF"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:paddingLeft="10dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_toEndOf="@+id/filePlayButton"
            android:layout_toStartOf="@+id/fileExpandButton" />

        <ImageButton
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/filePlayButton"
            android:src="@drawable/play"
            android:scaleType="fitCenter"
            android:background="@android:color/transparent"
            android:layout_centerInParent="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="8dp" />

        <ImageButton
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/fileExpandButton"
            android:src="@drawable/expand"
            android:scaleType="fitCenter"
            android:background="@android:color/transparent"
            android:layout_centerInParent="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="8dp"
            android:tint="@android:color/transparent" />



    </RelativeLayout>

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
